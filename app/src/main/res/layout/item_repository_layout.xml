<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_repository_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:textColor="@color/theme_blue"
            android:textSize="18sp"
            tools:text="User/Repo"/>

        <TextView
            android:id="@+id/tv_repository_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:drawableLeft="@drawable/star"
            android:drawablePadding="2dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="14sp"
            android:textColor="@color/gray"
            tools:text="88"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_repository_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="5"
        android:textColor="@color/gray"
        android:textSize="14sp"
        tools:text="An Android Animation library which easily add item animator to RecyclerView items."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_repository_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/gray"
            android:textSize="12sp"
            tools:text="Updated on 4 Nov 2015"/>

        <TextView
            android:id="@+id/tv_repository_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/theme_blue"
            android:background="#F1F8FF"
            tools:text="Java"/>
    </LinearLayout>
</LinearLayout>