<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_repo_detail_pulls_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="3"
            android:textColor="@color/text_black"
            android:textSize="16sp"
            tools:text="New Pull Requests"/>

        <LinearLayout
            android:id="@+id/ll_repo_detail_pulls_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_message"
                android:textColor="#606060"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/tv_repo_detail_pulls_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:textColor="#666"
                android:textSize="14sp"
                android:text="@string/zero"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <TextView
            android:id="@+id/tv_repo_detail_pulls_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/text_black"
            tools:text="#120"/>

        <TextView
            android:id="@+id/tv_repo_detail_pulls_opened"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            android:textSize="12sp"
            android:textColor="@color/gray"
            tools:text="opened on 11 Sep by CNCoderX"/>
    </LinearLayout>
</LinearLayout>