<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cncoderx.github.ui.view.AppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/theme_black">

        <LinearLayout
            android:id="@+id/ll_organ_cover_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:paddingLeft="68dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_organ_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="CNCoderX"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="68dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_organ_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    tools:text="cncoderx"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white">

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_organ_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/ll_organ_cover_footer"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/identicon"
            android:background="#f0f0f0"/>
    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/list_divider"
        app:showDividers="beginning|middle|end">

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_height"/>

        <LinearLayout
            android:id="@+id/ll_organ_group"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_group"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/members"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organ_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                style="@style/counter_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/enter"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_organ_repos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_repo"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/repositories"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organ_repos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                style="@style/counter_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/enter"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_organ_gists"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_gist"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/gists"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_organ_gists_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                style="@style/counter_text"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/enter"/>
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>