<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.cncoderx.github.ui.view.AppBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/theme_black">

        <LinearLayout
            android:id="@+id/ll_profile_cover_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:paddingLeft="68dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_profile_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    tools:text="CNCoderX"/>

                <TextView
                    android:id="@+id/tv_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:textColor="@color/theme_blue"
                    tools:text="cncoderx"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_bio"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                android:paddingLeft="68dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/tv_profile_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="14sp"
                    android:textColor="@color/gray"
                    android:hint="@string/no_bio"/>
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_profile_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="centerCrop"
            android:layout_alignTop="@id/ll_profile_cover_footer"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/identicon"
            android:background="#f0f0f0"/>
    </RelativeLayout>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/list_divider"
        app:showDividers="middle|end">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            style="@style/box_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <com.cncoderx.github.ui.view.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic_group"
                    android:textSize="18sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/tv_profile_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:visibility="gone">

                <com.cncoderx.github.ui.view.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic_loc"
                    android:textSize="18sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/tv_profile_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:visibility="gone">

                <com.cncoderx.github.ui.view.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic_email"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/tv_profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:gravity="center"
                android:visibility="gone">

                <com.cncoderx.github.ui.view.IconView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ic_link"
                    android:textSize="16sp"
                    android:textColor="@color/gray"/>

                <TextView
                    android:id="@+id/tv_profile_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/gray"
                    android:textSize="14sp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile_follow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@color/white"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/ll_profile_follower"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_follower_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/zero"
                    android:textColor="@color/text_black"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/followers2"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_profile_following"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_profile_following_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/zero"
                    android:textColor="@color/text_black"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/following2"
                    android:textColor="@color/gray"
                    android:textSize="12sp"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                style="@style/box_padding">

                <TextView
                    android:id="@+id/tv_profile_follow"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/follow"
                    android:textSize="13sp"
                    android:textColor="#606060"
                    android:background="@drawable/btn_follow_bg"/>
            </FrameLayout>
        </LinearLayout>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_height"/>

        <LinearLayout
            android:id="@+id/ll_profile_member"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector"
            android:visibility="gone">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_group"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/members"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_profile_member_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:visibility="gone"
                style="@style/counter_text"/>

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_enter"
                android:textSize="18sp"
                android:textColor="@color/theme_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile_organ"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector"
            android:visibility="gone">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_group"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/organizations"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_profile_organ_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:visibility="gone"
                style="@style/counter_text"/>

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_enter"
                android:textSize="18sp"
                android:textColor="@color/theme_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile_repos"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_repo"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/repositories"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_profile_repos_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:visibility="gone"
                style="@style/counter_text"/>

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_enter"
                android:textSize="18sp"
                android:textColor="@color/theme_black"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_profile_gists"
            android:layout_width="match_parent"
            android:layout_height="@dimen/single_item_height"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/box_horizontal_padding"
            android:paddingRight="@dimen/box_vertical_padding"
            android:background="@drawable/white_item_selector">

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_gist"
                android:textColor="@color/text_black"
                android:textSize="22sp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/box_horizontal_padding"
                android:text="@string/gists"
                android:textColor="@color/text_black"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/tv_profile_gists_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/zero"
                android:visibility="gone"
                style="@style/counter_text"/>

            <com.cncoderx.github.ui.view.IconView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ic_enter"
                android:textSize="18sp"
                android:textColor="@color/theme_black"/>
        </LinearLayout>
    </android.support.v7.widget.LinearLayoutCompat>
</LinearLayout>