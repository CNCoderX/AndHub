<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
        <!--<item name="android:typeface">monospace</item>-->
    </style>

    <style name="loading_dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="counter_text">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:background">@drawable/counter_bg</item>
    </style>
    
    <style name="box_padding">
        <item name="android:paddingLeft">@dimen/box_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/box_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/box_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/box_vertical_padding</item>
    </style>

    <style name="popup_menu_anim">
        <item name="android:windowEnterAnimation">@anim/anim_menu_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_menu_exit</item>
    </style>

    <style name="expandable_list_anim">
        <item name="android:windowEnterAnimation">@anim/anim_expandable_list_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_expandable_list_exit</item>
    </style>
</resources>
